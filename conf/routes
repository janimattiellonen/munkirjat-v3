# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationController.index

GET     /authors/search		controllers.AuthorController.searchAuthors(q:Option[String])
POST    /books						controllers.BookController.create
GET     /stats                      controllers.StatsController.stats
GET     /stats/currently-reading    controllers.StatsController.currentlyReading
GET     /stats/latest-read    		controllers.StatsController.latestRead
GET     /stats/latest-added    		controllers.StatsController.latestAdded
GET     /stats/favourite-authors 	controllers.StatsController.favouriteAuthors
GET     /stats/recently-read		controllers.StatsController.recentlyRead
GET     /stats/unread				controllers.StatsController.getUnread


# AngularJS templates

GET		/templates/home				controllers.ApplicationController.homeTemplate
GET		/templates/about			controllers.ApplicationController.aboutTemplate
GET		/templates/book-form		controllers.ApplicationController.bookFormTemplate



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
